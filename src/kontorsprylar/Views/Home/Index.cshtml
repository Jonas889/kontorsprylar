<div class="row">
    <div class="col-md-12">
        <nav class="navbar navbar-default">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".js-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/home/index">Hem</a>
            </div>
            <div class="collapse navbar-collapse js-navbar-collapse">
                @foreach (var cat in Model.CategoryToShow)
                {
                    <ul class="nav navbar-nav">
                        <li class="dropdown mega-dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> @cat.Name<span class="glyphicon glyphicon-chevron-down pull-right"></span></a>
                            <ul class="dropdown-menu mega-dropdown-menu row">
                                @foreach (var sub1 in cat.SubCategories)
                                {
                                    <li class="col-sm-3">
                                        <ul>
                                            <li class="dropdown-header"><a href="/store/category/@sub1.ID">@sub1.Name</a></li>
                                            @foreach (var sub2 in sub1.SubCategories)
                                            {
                                                <li><a href="/store/category/@sub2.ID">@sub2.Name</a></li>
                                            }
                                            <li class="divider"></li>
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                }
            </div>
            <!-- /.nav-collapse -->
        </nav>
    </div>
</div> @*MENY*@


<div id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ol class="carousel-indicators">

        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @*för att ändra vilka bilder som ska visas i karusellen kontrollerar vi här vilka index vi vill visa*@
        @for (int i = 1; i < 4; i++)
            {
            <li data-target="#myCarousel" data-slide-to=@i.ToString()></li>

        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        @{
            string firstImage = "https://duke.blob.core.windows.net/images/";
            firstImage += Model.Products[0].ImgLink;
            }
        <div class="item active">
            <a href="/store/product/@Model.Products[0].ID"><img src=@firstImage></a>
        </div>

        @for (int i = 1; i < 4; i++)
            {
                string img = "https://duke.blob.core.windows.net/images/";
                img += Model.Products[i].ImgLink;
            <div class="item">
                <a href="/store/product/@Model.Products[i].ID"><img src=@img></a>
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12 text-center">

            @for (var i = 0; i < 8 && i < Model.Products.Count; i++)
            {
                string img = "https://duke.blob.core.windows.net/images/";
                img += Model.Products[i].ImgLink;
                <div class="col-lg-3">
                    <a href="/store/product/@Model.Products[i].ID"><img src=@img width="200" height="200" /></a>
                    <br /><h5>@Model.Products[i].ProductName</h5>
                </div>
            }
        </div>
    </div>
</div>