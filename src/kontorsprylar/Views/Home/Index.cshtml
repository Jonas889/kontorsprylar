<div id="myCarousel" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ol class="carousel-indicators">

        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        @*för att ändra vilka bilder som ska visas i karusellen kontrollerar vi här vilka index vi vill visa*@
        @for (int i = 1; i < 4; i++)
            {
            <li data-target="#myCarousel" data-slide-to=@i.ToString()></li>

        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        @{string firstImage = "https://duke.blob.core.windows.net/images/" + @Model[0].ImgLink;}
        <div class="item active">
            <a href="/store/product/@Model[0].ID"><img src=@firstImage></a>
        </div>

        @for (int i = 1; i < 4; i++)
        {
            string img = "https://duke.blob.core.windows.net/images/";
            img += Model[i].ImgLink;
            <div class="item">
                <a href="/store/product/@Model[i].ID"><img src=@img></a>
            </div>
        }

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container-fluid">



    <div class="row">
     

        @for (var i = 0; i < 8 && i < Model.Count; i++)
        {
            string img = "https://duke.blob.core.windows.net/images/";
            img += Model[i].ImgLink;
            <div class="col-lg-3">
                <a href="/store/product/@Model[i].ID"><img src=@img width="200" height="200" /></a>
                <br /><h5>@Model[i].ProductName</h5>
            </div>
        }

    </div>
</div>